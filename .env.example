# Application Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DATABASE_URL=sqlite:///./style_me.db

# AI/LLM Provider Configuration
# Choose: 'openai' or 'google'
LLM_PROVIDER=openai

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your-openai-api-key-here

# Google AI Configuration (if using Google)
GOOGLE_API_KEY=your-google-api-key-here

# Server Configuration
HOST=0.0.0.0
PORT=8000

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads

# Vector Store Configuration
VECTOR_STORE=chromadb  # Options: chromadb, pgvector, none
CHROMADB_PATH=./chroma_data  # For Docker use: /app/chroma_data
CHROMADB_COLLECTION_PREFIX=drip_directive
